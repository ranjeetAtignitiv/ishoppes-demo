{% schema %}
{
  "name": "Official Stores",
  "tag": "section",
  "class": "official-stores",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "OFFICIAL STORES"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Brand Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_logo",
          "label": "Upload Brand Logo"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Optional Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Official Stores",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
  .official-stores {
    padding: 10px 20px;
    background: white;
  }
  .official-stores h2 {
    font-size: 28px;
    font-weight:500;
    margin-bottom: 30px;
    color: #0a1f33;
  }
  .official-stores-logos {
    display: flex;
    flex-wrap: wrap;
    justify-content: start;
    gap: 40px;
  }
  .official-stores-logos img {
    transition: all 0.3s ease;
    max-width: 314px;
    height: 180px;
    width: 314px;
    -o-object-fit: contain;
    object-fit: contain;
  }
{% endstyle %}

<section class="official-stores">
  <div class="page-width">
    <h2>{{ section.settings.title }}</h2>
    <div class="official-stores-logos">
      {% for block in section.blocks %}
        {% if block.settings.brand_logo != blank %}
          <a href="{{ block.settings.link | default: '#' }}" target="_blank">
            <img src="{{ block.settings.brand_logo | image_url: width: 200 }}" alt="Brand Logo">
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
