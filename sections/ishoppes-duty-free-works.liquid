{% schema %}
{
  "name": "Duty Free Steps",
  "tag": "section",
  "class": "duty-free-steps",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How Duty Free Works"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "START SHOPPING"
    }
  ],
  "presets": [
    {
      "name": "Duty Free Steps",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% style %}
  .duty-free-steps {
    background-color: #000;
    color: #fff;
    padding: 40px 0px;
    text-align: center;
    margin:0 50px;
  }
  .banner-wrapper {
    position:relative;
  }
  .homepage-banner-heading {
    position: absolute;
    width: 407px;
    max-width: 407px;
    height: 50px;
    left: -50px;
    top: -130px;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-color: black;
    border-radius: 0px 35px 0px 0px;
  }

  .duty-free-steps h2 {
    font-size: 24px;
    font-weight: 500;
    margin:10px 0 10px 40px;
    text-align:left;
    color:#fff;
  }

  .steps-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 20px;
    margin-bottom: 40px;
  }

  .step {
    background-color: #2c2c2c;
    flex: 1;
    min-width: 200px;
    padding: 10px;
    border-radius: 50px;
    display: flex;
    align-items: center;
    gap: 15px;
    justify-content: flex-start;
  }

  .step-number {
    background-color: white;
    color: black;
    border-radius: 50%;
    width: 62px;
    height: 62px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 500;
    font-size: 34px;
  }

  .step-label {
    color: white;
    font-size: 18px;
    text-align: left;
  }

  .start-shopping-btn {
    display: inline-block;
    background-color: white;
    color: black;
    padding: 12px 50px;
    font-weight: 500;
    border-radius: 50px;
    text-decoration: none;
    border: 1px solid #2c2c2c;
    transition: background 0.3s ease;
    box-shadow: 0px 0px 0px 8px rgb(255 255 255 / 20%);
  }

  .start-shopping-btn:hover {
    background-color: #e0e0e0;
    box-shadow: 0px 0px 0px 8px rgba(6, 0, 0, 0.1);
  }
  @media screen and (max-width: 768px) {
    .steps-container {
      flex-direction: column;
      align-items: stretch;
    }
  }
{% endstyle %}

<section class="duty-free-steps">
  <div class="banner-wrapper">
    <div class="homepage-banner-heading">
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <div class="steps-container">
      <div class="step">
        <div class="step-number">1</div>
        <div class="step-label">Select Flight</div>
      </div>
      <div class="step">
        <div class="step-number">2</div>
        <div class="step-label">Reserve & Pay</div>
      </div>
      <div class="step">
        <div class="step-number">3</div>
        <div class="step-label">Order Confirmation</div>
      </div>
      <div class="step">
        <div class="step-number">4</div>
        <div class="step-label">In-Store or Gate Pickup</div>
      </div>
    </div>

    {% if section.settings.button_link %}
      <a href="{{ section.settings.button_link }}" class="start-shopping-btn">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>
